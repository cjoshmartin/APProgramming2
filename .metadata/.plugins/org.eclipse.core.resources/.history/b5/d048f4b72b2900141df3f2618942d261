import javax.swing.*;

import java.awt.*;

public class Illusion extends JPanel{

	public Illusion(Color color){
	      setBackground(color);
	   }
	public void paintComponent (Graphics g){
	      super.paintComponent(g);
	      g.drawLine(20, 50,90, 50 );
	      g.drawLine(20, 20,90, 20);
	}
}

	      
	      