
public class Book {

	private String author, title;
	
	public Book(){
	author ="";
	title ="";
		
		
	}
	
	public Book(String a, String b)
	{
		author = a;
		title = b;
		
	}
	
	public void SetAuthor (String A){
		
		author = A;
	}
	
	public void SetTitle (String A){
			
			title = A;
		}
	
	public char getFirstletAuthor() {
		return author.charAt(author.length()-1);
		
	}
	
	public char getLastletAuthor() {
		return author.charAt(0);
		
	}
	
	public String toString()
	{
		return author + " " + title;
	}
	
}// end of class
